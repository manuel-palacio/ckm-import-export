    "rules": {
      "gt0017": {
        "id": "gt0017",
        "priority": 6,
        "when": [
          "$gt0003|Body mass index|<19,kg/m2"
        ],
        "then": [
          "$gt0013|BMI|=0|local::at0025|Less than 19|"
        ]
      },
      "gt0018": {
        "id": "gt0018",
        "priority": 5,
        "when": [
          "$gt0003|Body mass index|>=19,kg/m2",
          "$gt0003|Body mass index|<21,kg/m2"
        ],
        "then": [
          "$gt0013|BMI|=1|local::at0026|19 or less than 21|"
        ]
      },
      "gt0019": {
        "id": "gt0019",
        "priority": 4,
        "when": [
          "$gt0003|Body mass index|>=21,kg/m2",
          "$gt0003|Body mass index|<23,kg/m2"
        ],
        "then": [
          "$gt0013|BMI|=2|local::at0027|21 or less than 23|"
        ]
      },
      "gt0020": {
        "id": "gt0020",
        "priority": 3,
        "when": [
          "$gt0003|Body mass index|>=23,kg/m2"
        ],
        "then": [
          "$gt0013|BMI|=3|local::at0028|23 or greater|"
        ]
      },
      "gt0021": {
        "id": "gt0021",
        "priority": 2,
        "when": [
          "$gt0006|Food intake|!=null",
          "$gt0007|Weight loss|!=null",
          "$gt0008|Mobility|!=null",
          "$gt0009|Psychological stress|!=null",
          "$gt0010|Neuropsychological problems|!=null",
          "$gt0013|BMI|!=null"
        ],
        "then": [
          "$gt0014|Total score|.magnitude=$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value+$gt0010.value+$gt0013.value"
        ]
      },
      "gt0022": {
        "id": "gt0022",
        "priority": 1,
        "when": [
          "$gt0006|Food intake|!=null",
          "$gt0007|Weight loss|!=null",
          "$gt0008|Mobility|!=null",
          "$gt0009|Psychological stress|!=null",
          "$gt0010|Neuropsychological problems|!=null",
          "$gt0011|Calf circumference|!=null",
          "$gt0013|BMI|==null"
        ],
        "then": [
          "$gt0014|Total score|.magnitude=$gt0006.value+$gt0007.value+$gt0008.value+$gt0009.value+$gt0010.value+$gt0011.value"
        ]
      }
    }
