"hidden":false,"readonly":false,"required":true},{"type":"input-select","label":"Systolic BP","name":"systolic_bp","options":[{"text":"Less than 120","value":"at0027","magnitude":0},{"text":"120 to 139","value":"at0028","magnitude":1},{"text":"Equal to or more than 140","value":"at0029","magnitude":4}],"clearable":true,"display":"dropdown","hidden":false,"readonly":false,"required":true},{"type":"input-select","label":"Total cholesterol/HDL","name":"total_cholesterol_hdl","options":[{"text":"Less than 4.0","value":"at0031","magnitude":0},{"text":"4.0 to 5.9","value":"at0032","magnitude":6},{"text":"Equal to or more than 6.0","value":"at0033","magnitude":10}],"clearable":true,"display":"dropdown","hidden":false,"readonly":false,"required":true},{"type":"input-select","label":"Microalbumin","name":"microalbumin","options":[{"text":"Less than 30","value":"at0035","magnitude":0},{"text":"Equal to or more than 30","value":"at0036","magnitude":1}],"clearable":true,"display":"dropdown","hidden":false,"readonly":false,"required":true}]},{"type":"column","spanlarge":1,"spanmedium":2,"spansmall":4,"hidden":false,"readonly":false},{"type":"column","spanlarge":5,"spanmedium":2,"spansmall":4,"hidden":false,"readonly":false,"children":[{"text":"**Output**","type":"text","size":"m","position":"left","readonly":true},{"type":"input-count","label":"Total score","name":"total_score","min":0,"max":69,"readonly":true},{"type":"input-text","label":"CHD Risk","name":"chd_risk","multiline":false,"readonly":true},{"type":"input-text","label":"Probability of developing CHD in the next 10 years","name":"probability_of_developing_chd","hidden":false,"multiline":false,"readonly":true,"required":false}]}]},{"type":"reset-button","label":"Reset"},{"type":"submit-button","label":"Submit","justify":"end"}]}]}]}