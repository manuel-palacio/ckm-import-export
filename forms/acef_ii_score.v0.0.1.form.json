sion"],"unit":"%","precision":3,"minexclusive":false,"maxexclusive":false}],"hidden":false,"hideunit":false,"readonly":true,"required":false},{"type":"input-quantity","label":"ACEF II Risk Score","name":"total_score","unitoptions":[{"unit":"1","minexclusive":false,"maxexclusive":false}],"hidden":false,"hideunit":false,"readonly":true,"required":false,"alignLabel":"start","justifyLabel":"start"}]}]},{"type":"reset-button","label":"Reset","display":"normal","hidden":false,"justify":"end","readonly":false,"size":"m"},{"type":"submit-button","label":"Submit","justify":"end"}]}]}]}